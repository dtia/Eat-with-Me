	      </div>
	      <div class="span6">
	        <%= label_tag(:gender_target, "And I'm interested in")%> 
	        <%= select_tag('gender_target', options_for_select([['',''], ['Women', 'women'], ['Men', 'men'], ['Both', 'Both']])) %>
	      </div>
	    </div>
	    <div class="row-fluid">
	      <div class="span6">
          <%= label_tag(:city, "City") %> 
	        <%= select_tag('city', options_for_select([['',''], ['San Francisco', 'San Francisco'], ['Los Angeles', 'Los Angeles']])) %>
	      </div>
	      <div class="span6">
	        <%= label_tag(:date, "Date")%>
	        <%= text_field_tag(:date) %>
	      </div>
	    </div>
	  
	    <div class="row-fluid">
	      <div class="span12">
	        <%= label_tag(:restaurant, "Restaurant")%>
	        <%= text_field_tag(:restaurant)%>
	        <a href="#example" id="getrestaurantname" name="getrestaurantname" role="button" class="btn" data-toggle="modal"></a>
	      </div>
	      
	    </div>
	    <div class="row-fluid">
	      <div class="span12">
			<%= hidden_field_tag :uid, "" %>
			<%= hidden_field_tag :name, "" %>
	        <%= submit_tag("Search dates", :class => "btn")%>
	      </div>
	    </div>
	    
